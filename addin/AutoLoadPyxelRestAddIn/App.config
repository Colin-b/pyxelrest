<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" requirePermission="false" />
  </configSections>
  <log4net>
    <root>
      <level value="INFO"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>
        
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="${APPDATA}\pyxelrest\logs\" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyy-MM-dd'_addin.log'" />
      <staticLogFileName value="false" />
      <maxSizeRollBackups value="10" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%level] %message%newline" />
      </layout>
    </appender>
  </log4net>
  <appSettings>
    <add key="PathToPython" value="PYTHON_PATH_TO_BE_REPLACED_AT_POST_INSTALLATION" />
    <add key="PathToUpdateScript" value="AUTO_UPDATE_SCRIPT_PATH_TO_BE_REPLACED_AT_POST_INSTALLATION" />
    <add key="AutoCheckForUpdates" value="True" />
    <add key="PathToXlWingsBasFile" value="XLWINGS_BAS_PATH_TO_BE_REPLACED_AT_POST_INSTALLATION" />
  </appSettings>
</configuration>